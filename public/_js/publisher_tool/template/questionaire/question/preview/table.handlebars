<script id="publisher_tool_questionaire_question_preview_table" type="text/x-handlebars-template">
    <table id="questionaire" class="display-table">
        <thead>
            <tr class="header row">
                <th class="cell seven border-right">Question</th>
                <th class="cell three">Answer</th>
            </tr>
        </thead>
        <tbody>
            {{#each questions}}
                <tr class="question row {{#is ACTIVE true}}active{{/is}}" data-id="{{QUESTION_ID}}">
                    <td class="cell seven border-right">
                        {{QUESTION_NUMBER}}.

                        {{#empty QUESTION_SUB_NUMBER}}
                        {{else}}
                            {{QUESTION_SUB_NUMBER}}.
                        {{/empty}}

                        {{QUESTION_TITLE}}
                    </td>
                    <td class="cell three">
                        <div class="answer">
                            {{#if options}}
                                <ul>
                                    {{#each options}}
                                        <li class="option" data-answer-option-id="{{ANSWER_OPTION_ID}}" data-type="{{ANSWER_TYPE}}">
                                            {{#is ../ANSWER_TYPE 'SINGLE'}}
                                                <input type="radio" name="button{{../../QUESTION_ID}}" value="{{ANSWER_OPTION_ID}}" />
                                            {{/is}}

                                            {{#is ../ANSWER_TYPE 'MANY'}}
                                                <input type="checkbox" name="button{{../../QUESTION_ID}}" value="{{ANSWER_OPTION_ID}}" />
                                            {{/is}}

                                            {{#is HAS_IMAGE "1" }}
                                                <img src="_img/exchanges/{{ANSWER}}.png" alt="{{ANSWER}}" />
                                            {{else}}
                                                {{#is ../ANSWER_GROUP_ID "2" }}
                                                    <div class="icons {{lowercase ANSWER}}"></div> {{ANSWER}}
                                                {{else}}
                                                    {{ANSWER}}
                                                {{/is}}
                                            {{/is}}
                                        </li>
                                    {{/each}}
                                </ul>
                            {{else}}
                                {{#is ../ANSWER_TYPE 'STRING'}}
                                    <div class="option" data-answer-id="{{ANSWER_OPTION_ID}}" data-type="{{ANSWER_TYPE}}">
                                        <input type="text" class="string" name="string{{../../QUESTION_ID}}"/>
                                        {{ANSWER}}
                                    </div>
                                {{/is}}
                                {{#is ../ANSWER_TYPE 'DECIMAL'}}
                                    <div class="option" data-answer-id="{{ANSWER_OPTION_ID}}" data-type="{{ANSWER_TYPE}}">
                                        <input type="text" class="decimal" name="decimal{{../../QUESTION_ID}}" placeholder="0.00">
                                        {{ANSWER}}
                                    </div>
                                {{/is}}
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</script>